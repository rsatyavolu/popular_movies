<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_api_token_key"
        android:title="@string/pref_api_token"
        android:defaultValue="@string/pref_default_api_token"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:entries="@array/sortOptions"
        android:entryValues="@array/sortValues"
        android:key="@string/pref_sort_key"
        android:title="Sort Movies By"
        android:defaultValue="@string/pref_default_sort_option"
        />

